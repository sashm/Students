@model Students.Models.DisplayTable

@{
    Layout = null;
}

<!doctype html>
<html lang="en" ng-app="angularTable">
<head>
    <meta charset="utf-8">
    <title>Search Sort and Pagination in Angular js</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
</head>
<body>
    <div role="main" class="container theme-showcase">
        <div class="" style="margin-top:90px;">
            <div class="col-lg-8">
               
                <div class="bs-component" ng-controller="listdata">
                    @*<div class="alert alert-info">
            <p>Sort key: {{sortKey}}</p>
            <p>Reverse: {{reverse}}</p>
            <p>Search String : {{search}}</p>
        </div>*@
                    <form class="form-inline">
                        <div class="form-group">
                            <label>Search</label>
                            <input type="text" ng-model="search" class="form-control" placeholder="Search anything">
                        </div>
                    </form>
                    <form class="form-inline">
                        <div class="form-group">
                            <label>Search by name</label>
                            <input type="text" ng-model="search.FirstName" class="form-control" placeholder="Search by name">
                        </div>
                    </form>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th ng-click="sort('photo')">
                                    תמונת תלמיד
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='photo'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('studentID')">
                                    תעודת זהות
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='studentID'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('first_name')">
                                    שם פרטי
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='first_name'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('last_name')">
                                    שם משפחה
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='last_name'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('DateOfBirth')">
                                    תאריך לידה
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='DateOfBirth'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('CountryOfBirth')">
                                    ארץ לידה
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='CountryOfBirth'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('Gender')">
                                    מגדר
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='Gender'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('Grade')">
                                    כיתה
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='Grade'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('QuestionnaireStatus')">
                                    סטטוס שאלון
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='QuestionnaireStatus'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('PersonalPlanStatus')">
                                    סטטוס תוכנית אישית
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='PersonalPlanStatus'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('StudentStatus')">
                                    סטטוס תלמיד
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='StudentStatus'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('StudentType')">
                                    סוג תלמיד
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='StudentType'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>
                                <th ng-click="sort('OldStudentId')">
                                    מ. זיהוי קודם
                                    <span class="glyphicon sort-icon" ng-show="sortKey=='OldStudentId'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr dir-paginate="user in regdata|orderBy:sortKey:reverse|filter:search|itemsPerPage:10">
                                <td>{{regdata.Photo}}</td>
                                <td>{{regdata.StudentId}}</td>
                                <td>{{regdata.FirstName}}</td>
                                <td>{{regdata.LastName}}</td>
                                <td>{{regdata.DateOfBirth}}</td>
                                <td>{{regdata.CountryOfBirth}}</td>
                                <td>{{regdata.Gender}}</td>
                                <td>{{regdata.Grade}}</td>
                                <td>{{regdata.QuestionnaireStatus}}</td>
                                <td>{{regdata.PersonalPlanStatus}}</td>
                                <td>{{regdata.StudentStatus}}</td>
                                <td>{{regdata.StudentType}}</td>
                                <td>{{regdata.OldStudentId}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <dir-pagination-controls max-size="10"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>
                </div>
            </div>
            
        </div>
    </div>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/Scripts/homeController.js"></script>
</body>
</html>